{
  "name": "opennext-cloudflare-starter-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "lefthook install",
    "dev": "next dev --turbopack",
    "build": "biome ci . && next build",
    "build:cf": "opennextjs-cloudflare build",
    "start": "next start",
    "lint": "biome check --write",
    "format": "biome format --write",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "node scripts/db-migrate.js --local",
    "db:migrate:remote": "node scripts/db-migrate.js --remote",
    "better-auth:key": "node scripts/generate-better-auth-key.js",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.14.4",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "1.0.3",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.16",
    "@trpc/client": "^11.8.1",
    "@trpc/react-query": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "better-auth": "^1.4.10",
    "class-variance-authority": "^0.7.1",
    "client-only": "^0.0.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.562.0",
    "next": "15.5.9",
    "next-intl": "^4.7.0",
    "react": "19.1.4",
    "react-dom": "19.1.4",
    "react-email": "^5.1.1",
    "server-only": "^0.0.1",
    "sharp": "^0.34.5",
    "superjson": "^2.2.6",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "lefthook": "^2.0.13",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.53.0"
  }
}
